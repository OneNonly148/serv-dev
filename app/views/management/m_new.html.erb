<% provide(:title, 'Management Signup') %>
<div class="center jumbotron">
	<h1>Managment Signup</h1>
	<h2>Sign up for admin and management level access</h2>
</div>
<div class="col-md-6 col-md-offset-3">
	<%= form_for(@management, url: mngn_path) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>

		<%= f.label :email %>
		<%= f.email_field :email, class: 'form-control' %>

		<%= f.label :password %>
		<%= f.password_field :password, class: 'form-control', type: 'password' %>

		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation, class: 'form-control', type: 'password' %>
	
		<%= f.hidden_field :admin, :value => true %>

		<%= f.hidden_field :status, :value => 1 %>
	
		<%= f.submit "Create an account", class: "btn btn-primary" %>
	<% end %>
</div>