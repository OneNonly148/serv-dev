<% provide(:title, "Sign Up") %>
<h1>Sign Up</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user, url: signup_path) do |f| %>
			<%= render 'shared/error_messages' %>
			
			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>

			<%= f.label :status %>
			<%= f.select(:status, [['Management', 0], ['Customer', 1], ['Service Partner', 2]]) %>
		
			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control', type: 'password' %>

			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, class: 'form-control', type: 'password' %>
	
			<%= f.submit "Create an account", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>